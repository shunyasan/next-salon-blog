model Option {
  id String @id
  price Int
  terms String?
  moreCharge Boolean
  kind OptionKind
  clinicId String
  clinic Clinic @relation(fields: [clinicId], references: [id])
}

enum OptionKind {
  leakage
  aftercare
  anesthesia
  contractCancel
  firstVisitFees
  revisitFees
  shaving
  skinTrouble
}

//同スキーマ
model Price {
  id String @id
  name String  //部位名
  gender Int  //性別 1:女性 2:男性 3:女性男性
  times Int  //回数 0:年間プラン
  price Int //総額料金
  oncePrice Int //1回料金
  terms String? //備考
  partsId String
  parts Parts  @relation(fields: [partsId], references: [id])
  clinicId String
  clinic Clinic  @relation(fields: [clinicId], references: [id])
}

